<% unless session[:api_key] %>
    <h1>Registration</h1>
    <%= form_for @user, url: user_path do |f| %>
        <p>
          <%= f.label :login %>
          <br/>
          <%= f.text_field :login %>
        </p>
        <p>
          <%= f.label :email %>
          <br/>
          <%= f.text_field :email %>
        </p>
        <p>
          <%= f.label :password %>
          <br/>
          <%= f.password_field :password_digest %>
        </p>
        <p>
          <%= f.label :password_confirmation %>
          <br/>
          <%= f.password_field :password_confirmation %>
        </p>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
        <%= f.submit :OK %>
    <% end %>

    <h2>Sign in</h2>
    <%= form_for @user, url: sign_in_path do |f| %>
        <p>
          <%= f.label :login %>
          <br/>
          <%= f.text_field :login %>
        </p>
        <p>
          <%= f.label :email %>
          <br/>
          <%= f.text_field :email %>
        </p>
        <p>
          <%= f.label :password %>
          <br/>
          <%= f.password_field :password_digest %>
        </p>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
        <%= f.submit :OK %>
    <% end %>
<% else %>
    <h2>You have already signed in</h2>
    <%= link_to "Sign out", sign_out_path %>
<% end %>